# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /namespace                  controllers.NamespaceController.index
GET     /namespaces                 controllers.NamespaceController.getNamespaces
GET     /namespace/create/:name     controllers.NamespaceController.create(name:String)

GET     /ipfs/:namespace/:project/:version controllers.IpfsController.getFile(namespace,project,version)

GET     /project/:name          controllers.ProjectController.index(name:String)
POST    /project/upload             controllers.ProjectController.upload()
GET     /projects/:name             controllers.ProjectController.getProjects(name:String)
GET     /project/create/:namespace/:project/:version controllers.ProjectController.create(namespace:String, project:String, version:String)

GET     /package/:namespace/:project controllers.ProjectController.packages(namespace,project)
GET     /package/page/:namespace/:project controllers.ProjectController.packagePage(namespace,project)

GET     /project/files/list         controllers.ProjectController.getFiles()
GET     /project/file/remove/:namespace/:name  controllers.ProjectController.removeFile(namespace, name)
GET     /websocket                  controllers.HomeController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /webjars/*file              controllers.WebJarAssets.at(file)
